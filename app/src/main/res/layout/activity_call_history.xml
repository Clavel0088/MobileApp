<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="Historique de vos appel"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titre"/>

    <ListView
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAppel"
        app:layout_constraintTop_toBottomOf="@id/titre"
        android:id="@+id/listview"/>
    <Button
        android:id="@+id/btnAppel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="@drawable/bg_edit"
        android:text="Composer"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="7dp"
        android:layout_margin="25dp"

        app:layout_constraintBottom_toTopOf="@+id/relativeBottomMenu"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/relativeBottomMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_profil_menu"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:text="Profil"
            android:id="@+id/profilMenu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_phone"
            android:gravity="center"
            android:id="@+id/callMenu"
            android:drawablePadding="10dp"
            android:text="Appel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_offer_menu"
            android:gravity="center"
            android:id="@+id/offerMenu"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:text="Offre"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="Aucune historique"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:id="@+id/emptyData"/>


</android.support.constraint.ConstraintLayout>
